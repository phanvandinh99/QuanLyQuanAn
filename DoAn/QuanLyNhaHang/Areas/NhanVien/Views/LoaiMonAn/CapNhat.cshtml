@using QuanLyNhaHang.Models
@model LoaiMonAn
@{
    ViewBag.Title = "Cập Nhật Loại Món Ăn";
    Layout = "~/Areas/NhanVien/Views/Shared/_LayoutNhanVien.cshtml";
}

@using (Html.BeginForm())
{
    <div class="container">
        <div class="page-title-container">
            <div class="row">
                <div class="col-auto mb-3 mb-md-0 me-auto">
                    <div class="w-auto sw-md-30">
                        <h1 class="mb-0 pb-0 display-4" id="title">Cập Nhật Loại Món Ăn</h1>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-lg order-1 order-lg-0" style="max-width:823px">
                <h2 class="small-title">Thông Loại Món Ăn</h2>
                <div id="addressForm" class="tooltip-label-end" novalidate="">
                    <div class="card mb-5">
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Tên Loại Món Ăn</label>
                                    <input class="form-control" name="TenLMA" value="@Model.TenLMA" required>
                                    <input type="hidden" class="form-control" name="MaLMA" value="@Model.MaLMA" required>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <a href="/NhanVien/LoaiMonAn/Index" class="btn btn-outline-primary">Trở Về</a>
                <button class="btn btn-danger" type="submit">Cập Nhật</button>
            </div>
        </div>
    </div>
}