@using QuanLyNhaHang.Models
@model LoaiMonAn
@{
    ViewBag.Title = "Chi Tiết Loại Món Ăn";
    Layout = "~/Areas/NhanVien/Views/Shared/_LayoutNhanVien.cshtml";
}

<div class="container">
    <div class="page-title-container">
        <div class="row g-0">
            <div class="col-auto mb-3 mb-md-0 me-auto">
                <div class="w-auto sw-md-30">
                    <h1 class="mb-0 pb-0 display-4" id="title">Chi Tiết Loại Món Ăn</h1>
                </div>
            </div>
        </div>
    </div>
    <div class="mb-5">
        <h2 class="small-title">Thông Tin Chi Tiết Tầng</h2>
        <div class="card mb-2">
            <div class="row g-0 card-body">
                <div class="col">
                    <div class="ps-4">
                        <div class="row mb-1">
                            <div class="col">
                                <div class="mb-3">Mã tầng: @Model.MaLMA</div>
                                <div class="mb-3">Tên tầng: @Model.TenLMA</div>
                                <div class="mb-3">Số Lượng: @ViewBag.TongSoLuong</div>
                            </div>
                            <div>
                                <a href="/NhanVien/LoaiMonAn/Index" class="btn btn-outline-danger">Trở Về</a>
                                <a href="/NhanVien/LoaiMonAn/CapNhat?iMaLMA=@Model.MaLMA" class="btn btn-primary">Cập Nhật</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>