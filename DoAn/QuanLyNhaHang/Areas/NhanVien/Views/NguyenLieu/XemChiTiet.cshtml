@using QuanLyNhaHang.Models
@model NguyenLieu
@{
    ViewBag.Title = "Chi Tiết Nguyên Liệu";
    Layout = "~/Areas/NhanVien/Views/Shared/_LayoutNhanVien.cshtml";
}
<div class="container">
    <div class="page-title-container">
        <div class="row g-0">
            <div class="col-auto mb-3 mb-md-0 me-auto">
                <div class="w-auto sw-md-30">
                    <h1 class="mb-0 pb-0 display-4" id="title">Chi Tiết Nguyên Liệu</h1>
                </div>
            </div>
        </div>
    </div>
    <div class="mb-5">
        <h2 class="small-title">Thông Tin Chi Tiết Nguyên Liệu</h2>
        <div class="card mb-2">
            <div class="row g-0 card-body">
                <div class="col">
                    <div class="ps-4">
                        <div class="row mb-1">
                            <div class="col">
                                <div class="heading text-primary mb-1">Mã: @Model.MaNguyenLieu</div>
                                <div class="mb-3">Tên Nguyên Liệu: @Model.TenNguyenLieu</div>
                                <div class="mb-3">Số Lượng: @Model.SoLuongHienCon Chai/kg</div>
                            </div>
                            <div>
                                <a href="/NhanVien/NguyenLieu/Index" class="btn btn-danger">Trở Về</a>
                                <a href="/NhanVien/NguyenLieu/CapNhat?iMaNguyenLieu=@Model.MaNguyenLieu" class="btn btn-primary">Cập Nhật</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


