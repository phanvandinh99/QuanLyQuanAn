    <script>
        $(document).ready(function () {
            var toastMessage = '@TempData["ToastMessage"]';

            if (toastMessage) {
                var parts = toastMessage.split('|');
                if (parts.length === 2) {
                    var toastType = parts[0];
                    var message = parts[1];

                    switch (toastType) {
                        case 'success':
                            toastr.success(message);
                            break;
                        case 'error':
                            toastr.error(message);
                            break;
                        case 'info':
                            toastr.info(message);
                            break;
                        case 'warning':
                            toastr.warning(message);
                            break;
                    }
                }
            }
        });
    </script>
