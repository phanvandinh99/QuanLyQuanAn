<!DOCTYPE html>
<html lang="en">

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Title -->
    <title>@ViewBag.title</title>
    <link rel="stylesheet" href="https://cdn.bootcss.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Bootstrap css-->
    <link rel="stylesheet" type="text/css" href="~/Assets/Login/css/vendors/bootstrap.css">
    <!-- App css-->
    <link rel="stylesheet" type="text/css" href="~/Assets/Login/css/style.css">
    <!-- Responsive css-->
    <link rel="stylesheet" type="text/css" href="~/Assets/Login/css/responsive.css">
    <!-- Aler toat-->
    <script src="~/Assets/js/vendor/jquery-3.5.1.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
</head>

<body>
    <!-- login page start-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-7 order-1">
                <img class="bg-img-cover bg-center" src="~/Assets/Login/images/login/1.jpg"
                     alt="looginpage">
            </div>
            <div class="col-xl-5 p-0">
                <div class="login-card login-dark">
                    <div>
                        <div class="login-main">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- latest jquery-->
        <script src="~/Assets/Login/js/jquery.min.js"></script>
        <!-- Theme js-->
        <script src="~/Assets/Login/js/script.js"></script>
        <script>
        $(document).ready(function () {
            var toastMessage = '@TempData["ToastMessage"]';

            if (toastMessage) {
                var parts = toastMessage.split('|');
                if (parts.length === 2) {
                    var toastType = parts[0];
                    var message = parts[1];

                    switch (toastType) {
                        case 'success':
                            toastr.success(message);
                            break;
                        case 'error':
                            toastr.error(message);
                            break;
                        case 'info':
                            toastr.info(message);
                            break;
                        case 'warning':
                            toastr.warning(message);
                            break;
                    }
                }
            }
        });
        </script>
    </div>
</body>

</html>