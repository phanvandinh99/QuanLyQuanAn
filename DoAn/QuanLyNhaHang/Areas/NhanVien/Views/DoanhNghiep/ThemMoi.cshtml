@using QuanLyNhaHang.Models
@{
    ViewBag.Title = "Thêm Doanh Nghiệp";
    Layout = "~/Areas/NhanVien/Views/Shared/_LayoutNhanVien.cshtml";
}

@using (Html.BeginForm("ThemMoi", "DoanhNghiep", FormMethod.Post, new { id = "DoanhNghiep", @enctype = "multipart/form-data" }))
{
<div class="container">
    <div class="page-title-container">
        <div class="row">
            <div class="col-auto mb-3 mb-md-0 me-auto">
                <div class="w-auto sw-md-60">
                    <h1 class="mb-0 pb-0 display-4" id="title">Thêm Mới Doanh Nghiệp</h1>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12 col-lg order-1 order-lg-0" style="max-width:823px">
            <h2 class="small-title">Thông Tin Doanh Nghiệp</h2>
            <div id="addressForm" class="tooltip-label-end" novalidate="">
                <div class="card mb-5">
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Mã Doanh Nghiệp<span class="text-danger">*</span></label>
                                <input class="form-control" name="MaDoanhNghiep" placeholder="Mã doanh nghiệp" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Tên Doanh Nghiệp<span class="text-danger">*</span></label>
                                <input class="form-control" name="TenDoanhNghiep" placeholder="Tên doanh nghiệp" required>
                            </div>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Số Điện Thoại<span class="text-danger">*</span></label>
                                <input class="form-control" type="number" name="SoDienThoai" placeholder="Số điện thoại" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Email<span class="text-danger">*</span></label>
                                <input class="form-control" type="email" name="Email" placeholder="Đại chỉ email" required>
                            </div>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Thời Gian Bắt Đầu<span class="text-danger">*</span></label>
                                <input class="form-control" type="datetime-local" name="ThoiGianBatDau" id="ThoiGianBatDau" placeholder="Ngày bắt đầu" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Thời Gian Kết Thúc<span class="text-danger">*</span></label>
                                <input class="form-control" type="datetime-local" name="ThoiGianKetThuc" id="ThoiGianKetThuc" placeholder="Ngày kết thúc" required>
                            </div>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-12 mb-3">
                                <label class="form-label">Địa Chỉ<span class="text-danger">*</span></label>
                                <textarea class="form-control" name="DiaChi" rows="2" required placeholder="Địa chỉ doanh nghiệp"></textarea>
                            </div>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Thành Tiền<span class="text-danger">*</span></label>
                                <input class="form-control" type="text" id="tongTien" name="TongTien" placeholder="Giá thuê" required>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <a href="/NhanVien/DoanhNghiep/Index" class="btn btn-outline-danger">Trở Về</a>
            <button class="btn btn-primary" type="submit">Thêm Mới</button>
        </div>
    </div>
</div>
}
<script>
    document.getElementById('ThoiGianBatDau').addEventListener('change', validateDateTime);
    document.getElementById('ThoiGianKetThuc').addEventListener('change', validateDateTime);

    function validateDateTime() {
        var startTime = document.getElementById('ThoiGianBatDau').value;
        var endTime = document.getElementById('ThoiGianKetThuc').value;

        if (startTime && endTime && startTime > endTime) {
            alert('Thời gian bắt đầu phải nhỏ hơn hoặc bằng thời gian kết thúc.');
            document.getElementById('ThoiGianBatDau').value = '';
            document.getElementById('ThoiGianKetThuc').value = '';
        }
    }
</script>

<script>
    document.getElementById('tongTien').addEventListener('input', function (e) {
        let value = e.target.value;

        // Loại bỏ ký tự không phải số
        value = value.replace(/[^\d]/g, '');

        // Định dạng lại với dấu phẩy
        value = value.replace(/\B(?=(\d{3})+(?!\d))/g, ",");

        // Gán lại giá trị đã format vào input
        e.target.value = value;
    });

    // Trước khi gửi form, loại bỏ dấu phẩy khỏi giá trị input
    document.getElementById('DoanhNghiep').addEventListener('submit', function (e) {
        let input = document.getElementById('tongTien');

        // Loại bỏ dấu phẩy trước khi gửi đi
        input.value = input.value.replace(/[^\d]/g, '');
    });
</script>