@using QuanLyNhaHang.Models
@model DoanhNghiep
@{
    ViewBag.Title = "Chi Tiết Doanh Nghiệp";
    Layout = "~/Areas/NhanVien/Views/Shared/_LayoutNhanVien.cshtml";
}

<div class="container">
    <div class="page-title-container">
        <div class="row g-0">
            <div class="col-auto mb-3 mb-md-0 me-auto">
                <div class="w-auto sw-md-30">
                    <h1 class="mb-0 pb-0 display-4" id="title">Chi Tiết Doanh Nghiệp</h1>
                </div>
            </div>
        </div>
    </div>
    <div class="mb-5">
        <h2 class="small-title">Thông Tin Chi Tiết Doanh Nghiệp</h2>
        <div class="card mb-2">
            <div class="row g-0 card-body">
                <div class="col">
                    <div class="ps-4">
                        <div class="row mb-1">
                            <div class="col">
                                <div class="heading text-primary mb-1">Mã Doanh Nghiệp: @Model.MaDoanhNghiep</div>
                                <div class="mb-3">Tên Doanh Nghiệp: @Model.TenDoanhNghiep</div>
                                <div class="mb-3">Số Điện Thoại: @Model.SoDienThoai</div>
                                <div class="mb-3">Email: @Model.Email</div>
                                <div class="mb-3">Địa Chỉ: @Model.DiaChi</div>
                                <div class="mb-3">Thoi Gian Bắt Đầu: @Model.ThoiGianBatDau</div>
                                <div class="mb-3">Thời Gian Kết Thúc: @Model.ThoiGianKetThuc</div>
                            </div>
                            <div>
                                <a href="/NhanVien/DoanhNghiep/Index" class="btn btn-outline-danger">Trở Về</a>
                                <a href="/NhanVien/DoanhNghiep/CapNhat?sMaDoanhNghiep=@Model.MaDoanhNghiep" class="btn btn-primary">Cập Nhật</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>